generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["starter"]
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  posts Post[]

  @@map("user")
  @@schema("starter")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int

  @@map("post")
  @@schema("starter")
}
