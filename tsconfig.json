{
  "compilerOptions": {
    // ES6 modules required by Prisma 7
    // Must align with "type": "module" in package.json
    // and.swcrc config that outputs ES6 modules
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": ["vitest/globals"],
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "vitest.config.mts", "prisma.config.ts", "prisma/**/*"]
}
