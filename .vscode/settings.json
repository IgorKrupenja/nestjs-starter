  "editor.formatOnSave": true,
  "[yaml][github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vitest.disableWorkspaceWarning": true,
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
